# ===================================
# Django настройки
# ===================================

# Секретный ключ Django (должен быть длинным и случайным)
# Генерация: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=django-insecure-your-secret-key-here-change-in-production

# Режим отладки: True или False
DEBUG=True

# Разрешённые хосты (через запятую, без пробелов)
ALLOWED_HOSTS=localhost,127.0.0.1

# ===================================
# База данных
# ===================================
# DATABASE_URL=postgres://user:password@localhost:5432/habits_db

# ===================================
# Telegram Bot
# ===================================

# Токен бота (получите у @BotFather в Telegram)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ===================================
# Celery + Redis
# ===================================

# URL брокера (Redis)
CELERY_BROKER_URL=redis://127.0.0.1:6379/0

# Хранилище результатов
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# ===================================
# Email (опционально)
# ===================================
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your_email@gmail.com
# EMAIL_HOST_PASSWORD=your_app_password
# EMAIL_USE_TLS=True